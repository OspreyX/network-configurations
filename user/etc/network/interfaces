auto lo br0 eth0
iface lo inet loopback

# Label eth1 port as "LAN", plug into robot switch
iface br0 inet static
  address 192.168.1.2
  network 192.168.1.0
  broadcast 192.168.1.255
  netmask 255.255.255.0
  bridge_ports eth1 wlan0

# Label eth0 port as "WAN"; it's for connecting to the outside world.
iface eth0 inet dhcp
